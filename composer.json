{
    "name": "brain/brain",
    "description": "A Pimple wrapper for WordPress",
    "authors": [
        {
            "name": "Giuseppe Mazzapica",
            "email": "giuseppe.mazzapica@gmail.com",
            "homepage": "http://gm.zoomlab.it",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Giuseppe-Mazzapica/Brain/issues",
        "source": "https://github.com/Giuseppe-Mazzapica/Brain"
    },
    "license": "GPL-2.0+",
    "require": {
        "php": ">=5.4",
        "pimple/pimple": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "files": ["boot.php"],
        "psr-4": {
            "Brain\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brain\\Tests\\": "tests/src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}
